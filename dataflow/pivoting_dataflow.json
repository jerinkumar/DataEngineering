{
	"name": "pivoting_dataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DelimitedText4",
						"type": "DatasetReference"
					},
					"name": "pivoting"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DelimitedText5",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "PivotedSales"
				},
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Region as string,",
				"          Month as string,",
				"          Sales as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> pivoting",
				"derivedColumn1 pivot(groupBy(Region),",
				"     pivotBy(Month),",
				"     TotalSales = sum(Sales),",
				"     columnNaming: '$N$V',",
				"     lateral: true) ~> PivotedSales",
				"pivoting derive(SalesNumeric = toFloat(Sales)) ~> derivedColumn1",
				"PivotedSales sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['pivot_output.csv'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}